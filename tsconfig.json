{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "build",
    "incremental": true,
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "prisma/*"
      ]
    }
  }
}